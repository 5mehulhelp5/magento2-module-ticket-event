<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Catalog:etc/product_types.xsd">
    <type name="ticket" label="Ticket Product" indexPriority="30" sortOrder="80"
          modelInstance="Blackbird\TicketBlaster\Model\Product\Type\Ticket">
        <customAttributes>
            <attribute name="refundable" value="true"/>
            <attribute name="is_real_product" value="false"/>
            <attribute name="taxable" value="true"/>
        </customAttributes>
    </type>
    <composableTypes>
        <type name="ticket" />
    </composableTypes>
</config>
